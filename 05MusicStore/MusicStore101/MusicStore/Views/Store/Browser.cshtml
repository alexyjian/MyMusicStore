@using System.Runtime.InteropServices
@model IEnumerable<MusicStoreEntity.Album>
@{
    ViewBag.Title = "浏览专辑";
    Layout = "~/Views/Shared/_NewLayout.cshtml";

    var album = Model.FirstOrDefault();
    var genreName = "";
    if (album != null)
    {
        genreName = album.Genre.Name;
    }
    else {
        genreName = "找不到";
    }
}

<div id="genre">
    <h3><em>@genreName</em>专辑</h3>
    <ul id="album-list">
        @foreach (var item in Model)
        {
            <li>
                <a href="@Url.Action("detail","Store",new { id=item.ID})">
                    <img style="height:100px;width:80px;" alt="@item.Title" src="@item.AlbumArtUrl" id="album-banner" /> <br/>
                    <span>@item.Artist.Name</span>
                    <span>@item.Title</span>
            </a>
            </li>
        }
    </ul>

</div>



@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
    img {
        height:100px;
        width:80px;
    }
    .div_left {
        height:100px;
        float:left;
        margin-right:150px;
    }
    .div_right {
        height:100px;
        padding-top:5px;
    }
</style>

<h2>班委名单</h2>
<hr />
@for (int i = 0; i < 5; i++)
{
    <div class="div_left">
        <img src="../../Content/img.jpeg" alt="头像图片" />
    </div>
    <div class="div_right">
        <b>班级：</b>2017级软件技术1班<br>
        <b>职位：</b>@ViewBag.Power[i]<br>
        <b>姓名：</b>@ViewBag.Name[i]<br>
        <b>说明：</b>Null
    </div>
    <hr />
}
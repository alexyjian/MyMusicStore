    //老师的写法

              function Delete(ID) {
                  //ajax 提交到服务器端进行购物车项的删除
                  $.ajax({
                  type: 'post',
                  async: true,
                  url: '../../ShoppingCart/Delete',
                  data: { id: ID },
                  dataType: 'json',
                  success: function (data) {
                      //视图中进行局部页面的刷新 <tbody>
                      $("#tbCart").html(data);

                      setTimeout(function () {
                          location.reload();
                      },
                  1000);
                  }
              })
              }

              function jianCount(ID) {

                  //ajax 提交到服务器端进行购物车项的删除
                  $.ajax({
                      type: 'post',
                      async: true,
                      url: '../../ShoppingCart/Modified',
                      data: { id: ID,jj:"jian"},
                      dataType: 'json',
                      success: function (data) {
                          //视图中进行局部页面的刷新 <tbody>
                          $("#tbCart").html(data);
                          setTimeout(function () {
                              location.reload();
                          },
                                            1000);
                          }
                      })
              }

    function jiaCount(ID) {

        //ajax 提交到服务器端进行购物车项的删除
        $.ajax({
                    type: 'post',
            async: true,
            url: '../../ShoppingCart/Modified',
            data: { id: ID,jj:"jia" },
            dataType: 'json',
            success: function (data) {
                //视图中进行局部页面的刷新 <tbody>
                $("#tbCart").html(data);

                setTimeout(function () {
                    location.reload();
                },
                   1000);
            
                        }
                    })
    }
</script>


@model MusicStore.ViewModels.LoginViewModel
@{
    ViewBag.Title = "登录";
    Layout = "~/Views/Shared/_newLayout.cshtml";
}

<h2>用户登录</h2>
<p>如果没有用户名请点一下 @Html.ActionLink("这里","Register")</p>
@using (Html.BeginForm("login","Account",new { returnUrl = ViewBag.ReturnUrl },FormMethod.Post))
{
<div>
    <fieldset>
        <legend>账户信息</legend>
        <div class="editor-label">
            @Html.LabelFor(x => x.UserName)
        </div>
        <div class="editor-field">
            @Html.TextBoxFor(x => x.UserName, new { placeholder = "请输入用户名" })
            @Html.ValidationMessageFor(x => x.UserName)
        </div>

        <div class="editor-label">
            @Html.LabelFor(x => x.PassWord, new { placeholder = "请输入密码" })
        </div>
        <div class="editor-field">
            @Html.PasswordFor(x => x.PassWord)
            @Html.ValidationMessageFor(x => x.PassWord)
        </div><br/>
        <p>
            <input type="submit"value="登录" class="btn btn-success"style="width:70px;"/> 
        </p>

    </fieldset>

</div>
}

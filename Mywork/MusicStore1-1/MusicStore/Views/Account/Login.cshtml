@model MusicStore.ViewModels.LoginViewModel
@{
    ViewBag.Title = "登录";
    Layout = "~/Views/Shared/_NewLayout.cshtml";
}

<h2>用户登录</h2>
<p>如果没有用户名请点我 <a href="@Url.Action("Register","Account")">注册</a></p>
<form action="/account/login?returnUrl=%2F" method="post">

    @Html.AntiForgeryToken()

    <div>
        <fieldset>
            <legend>用户信息</legend>
            <div class="editor-label">
                @Html.LabelFor(x => x.UserName)

            </div>

            <div class="editor-field">
                @Html.TextBoxFor(x => x.UserName, new { placeeholder = "请输入用户名" })
                @Html.ValidationMessageFor(x => x.UserName)
            </div>


            <div class="editor-label">
                @Html.LabelFor(x => x.PassWord)
            </div>

            <div class="editor-field">
                @Html.PasswordFor(x => x.PassWord, new { placeeholder = "请输入用户登录密码" })
                @Html.ValidationMessageFor(x => x.PassWord)
            </div>

            <p>
                <input type="submit" value="登录" class="btn btn-success" style="width:70px" />
            </p>

        </fieldset>
    </div>
    </form>
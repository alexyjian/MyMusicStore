@model MusicStore.ViewsModel.ShoppingCartVIewModel
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_NewLayout.cshtml";
}

<h2>
    <i class="glyphicon glyphicon-shopping-cart"></i>
    <em>浏览</em>您的购物车

</h2>


<p class="button">
    @Html.ActionLink("马上购买","buy", "Order")
</p>

<table>
    <tr>
        <th>专辑名称</th>
        <th>单价</th>
        <th>数量</th>
        <th>操作</th>

    </tr>
    
    <tbody id="tbCart">
    @foreach (var item in Model.CartItems)
    {
        <tr>
            <td>
                @Html.ActionLink(item.Ablum.Title,"detail", "Store",new {id=item.Ablum.ID},null)
            </td>
            <td>
                @item.Ablum.Price.ToString("C")
            </td>
            <td>
                @item.Count
            </td>
            <td>
                <a href="#" onclick="removeCart('@item.ID');">
                    <i class="glyphicon glyphicon-remove"></i>
                    我不喜欢它了！
                </a>
            </td>
        </tr>
    }
    
    <tr>
        <td></td>
        <td></td>
        <td>总价</td>
        <td>@Model.CartTotalPrice.ToString("C")</td>
    </tr>
    </tbody>
</table>

<script>
    function removeCart(id) {
        //ajax 提交到服务器端进行购物车项的删除
        $.ajax({
            type: 'post',
            async: true,
            url: "../../ShoppingCart/removeCart",
            data: { id: id },
            dataType: 'json',
            success: function(data) {
                //视图中进行局部页面的刷新，<tbody>
                $('#tbCart').html(data);

                //1秒后，自动重新刷新此区域
                setTimeout(function() {
                        location.reload();
                    },
                    1000);
            }
        });
    }
</script>



@model MusicStoreEntity.Album

@{
    Layout = "~/Views/Shared/_NewLayout.cshtml";
    ViewBag.Title = "专辑明细";
}
<div class="row">
    <div class="col-md-6 Music-box">
        <div id="Music-Jukebox">
            <img alt="@Model.Title" src="@Model.AlbumArtUrl" />
            @*<div class="Music-white"></div>*@
        </div>
    </div>
    <div id="album-details" class="col-md-6">
        <h2>@Model.Title</h2>
        <p>
            <img alt="@Model.Title" src="@Model.AlbumArtUrl" />
        </p>
        <p>
            <em>
                发布时间：
            </em>
            @Model.PublisherDate.ToString("yyyy年MM月dd日");
        </p>
        <p>
            <em>
                分类：
            </em>
            @Model.Genre.Name
        </p>
        <p>
            <em>
                歌手：
            </em>
            @Model.Artist.Name
        </p>
        <p>
            <em>
                价格：
            </em>
            ￥@String.Format("{0:F}", Model.Price)
        </p>

        <div id="msg"></div>
        <p class="button">
            <a class="btn" id="addcart">添加到购物车</a>
            <div id="msg"></div>
        </p>
    </div>
</div>
<br />

<div id="Reply">
    <div class="Reply-title"><span style="font-size:30px;">评论</span>  共&条评论</div>
    <div class="row Reply-user">
        <div class="col-md-1"></div>
        <div class="col-md-9 Reply-ueditor">
            <script id="container" name="content" type="text/plain">
            </script>
            <input type="button" value="发表评论" id="Reply-btn" />
        </div>
        <div class="col-md-2"></div>
    </div>


    @*<div class="row">
            <div class="col-md-2"></div>
            <div class="col-md-9">
                <div class="Music-Reply">
                    <div class="Reply-time">发表时间：</div>
                </div>
            </div>
            <div class="col-md-1"></div>
        </div>*@
</div>

<!-- 配置文件 -->
<script type="text/javascript" src="~/ueditor/ueditor.config.js"></script>
<!-- 编辑器源码文件 -->
<script type="text/javascript" src="~/ueditor/ueditor.all.js"></script>
<!--<script type="text/javascript" charset="utf-8" src="~/ueditor/lang/zh-cn/zh-cn.js"></script>-->
<!-- 实例化编辑器 -->
<script type="text/javascript">
    var ue = UE.getEditor('container');
    //var ue = UE.getContent();
    //对编辑器的操作最好在编辑器ready之后再做
    
        //设置编辑器的内容
        //ue.setContent('hello');
        //获取html内容，返回: <p>hello</p>
       // var html = ue.getContent();
        //获取纯文本内容，返回: hello

        /*评论*/
        $("#Reply-btn").click(function () {
            var txt = ue.getContentTxt();
           
            var html = ue.getContent();
            alert(html);
            $.ajax({
                type: 'post',
                async: true,
                url: '../../Ueditor/Index',
                data: { id: "@Model.ID", reply: txt },
                dataType: 'json',
                success: function (data) {
                    //如果没有登录,跳转到登录页
                    if (data == "nologin")
                        location.href = "@Url.Action("login","Account",new { returnUrl = Url.Action("Detail", "Store", new { id = Model.ID }) })";
                    else {
                        //添加评论成功
                        $("#Reply").html(data);
                        //2S后，重新刷新此区域
                        setTimeout(function () {
                            location.reload();
                        }, 2000);
                    }
                }
            });
        });
  
</script>
<script>


    $("#Music-Jukebox").click(function () {
        $("#Music-Jukebox").style += "animation:Jukebox";
    });

    /*添加*/
    $("#addcart").click(function () {
        //异步
        $("#msg").html("<img src ='../../content/images/loading.gif'>添加购物车请稍后...");
        $.ajax({
            type: 'post',
            async: true,
            url: '../../ShoppingCart/AddCart',
            data: { id: "@Model.ID" },
            dataType: 'json',
            success: function (data) {
                //如果没有登录,跳转到登录页
                if (data == "nologin")
                    location.href = "@Url.Action("login","Account",new { returnUrl = Url.Action("Detail", "Store", new { id = Model.ID }) })";
                else {
                    //添加到购物车成功，把动画取消

                    $("#msg").html(data);
                    //2S后，重新刷新此区域
                    setTimeout(function () {
                        location.reload();
                    }, 2000);
                }
            }
        });
    });


</script>



@model IEnumerable<MusicStoreEntity.Album>
@{
    ViewBag.Title = "首页";
}
<div id ="promotion"></div>
<h3><em>新歌</em>上架</h3>
<div>
    <ul id="album-list">
        @foreach (var item in Model)
        {
            <li>
                   <a href="@Uri.Action("detai","store",new {id=item.ID})">
                       <img alt="@item.Title"src="@item.AlbumArtUrl"/>
                       <span>@item.Artist.Name</span>.<span>@item.Title</span>
                       </a>
            </li>
        }
        </ul>
    </div>

@model MusicStoreEntity.Album
@{
    Layout = "~/Views/Shared/_NewLayout.cshtml";
    ViewBag.Title = "专辑明细";
}
<h2>@Model.Title</h2>

<div id="box-video">
    @*@(Model.AlbumArtUrl*@
    <div class="cd" style="background:url(@(Model.AlbumArtUrl))no-repeat;">
        <div class="cd-center">
            <audio src="~/Music/1.mp3" controls autoplay loop></audio>
        </div>
    </div>
</div>
<div id="album-details">
    <p>
        <em>
            发布时间
        </em>
        @Model.PublisherDate.ToString("yyyy年MM月dd日");
    </p>
    <p>
        <em>分类</em>
        @Model.Genre.Name
    </p>
    <p>
        <em>歌手</em>
        @Model.Artist.Name
    </p>
    <p>
        <em>价格</em>
        ￥@string.Format("{0:F}", Model.Price)
    </p>
    <div id="msg"></div>
    <p>
        <a class="btn" id="addcart">添加到购物车</a>
        <div id="msg">
        </div>
    </p>
    </div>

@*百度ueditor的呈现*@
<div class="row">
    <div class="col-md-10">
        <div class="form-group">
            <textarea id="editor"name="editor"></textarea>
            </div>
        </div>
    </div>

<script>
    //百度编辑器调用
    var editor=new baidu.editor.ui.Editor({
        UEDITOR_HOME_URL:'/ueditor/',//配置编辑器的路径
        iframeCssUrl:'/ueditor/themes/iframe.css',//自定义样式路径
        initialContent:'五星好评',//初始内容
        autoHeightEnabled:true,//高度是否只适应
        minFrameHeight:500//编辑器最小高度
    });
    editor.render('editor');


    //提交回复
    $("#bthCmt").click(function () {
        //获得编辑器中的内容
        UE.getEditor('editor');
        var comtent = UE.getEditor('editor').getContent();
        console.log(content);
        //ajax提交
        $.ajax({
            type: 'post',
            asyn: true,
            url:'@Url.Action("AddCmt","Store")',
            data:{
                "id":"@Model.ID",
                "cmt":content,
                "reply":""
            },
        dataType:'json',
        success:function(data){
            if (data=='nologon'){
                //如果没登录
                location.href="@Url.Action("login", "Account",
    new { returnUrl = Url.Action("Detail", "Store", new { id = Model.ID })});
            }
            else if (data=="ok"){

                alert('发表成功')
                //局部刷新
            }
        }
    });
    });

    </script>

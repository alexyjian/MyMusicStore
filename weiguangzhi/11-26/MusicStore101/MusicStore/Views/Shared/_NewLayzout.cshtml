@using MusicStore.ViewModels
@using MusicStoreEntity.UserAndRole
@{ 
    var loginUserModel = Session["LoginUserSessionModel"] as LoginUserSessionModel;
    ApplicationUser user = null;
    if (loginUserModel != null)
    {
        if (loginUserModel.User != null)
        {
            user = loginUserModel.User;
        }
    }
}
<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>_NewLayzout</title>
    @*绑定样式库*@
    @Styles.Render("~/Content/css")

    @Styles.Render("~/bundles/modernizr")
    @Styles.Render("~/ Content / JqueryUI")

    @*绑定脚本库*@
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/JqueryUI")
    @Scripts.Render("~/bundles/jqueryval")

</head>
<body>
    <div id="header"> 
        <h1><a href="/">ASP.NET MVC 音乐商店</a></h1>

        <ul class="nav navbar-nav navbar-right">
            <li><a href="@Url.Action("Index", "Home")">主页</a></li>
            <li><a href="@Url.Action("Index", "store")">商店</a></li>
            @if (user == null)
            {
            <li><a href="@Url.Action("Login", "Account")"> 登录 </a></li>
            }
            else
            {
                <li class="dropdown">
                    <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">@user.Person.Name<span class="caret"></span></a>
                    
                    <ul class="dropdown-menu">
                        
                        <li><a href="@Url.Action("","")">购物车(2)</a></li>
                        <li><a href="@Url.Action("","")">我的订单</a></li>
                        <li><a href="@Url.Action("EditPw","Account")">设置</a></li>
                        <li><a href="@Url.Action("loginout","account")">注销</a></li>
                    </ul>
            </li>
            }
        </ul>
        </div>
    <div class="container">
        <div class="row">
            <div class="col-md-3">
                @*左侧导航*@
                @Html.Partial("_GetGenreMenu",new MusicStoreEntity.EntityDbContext().Genres.ToList())
                </div>
            <div class="col-md-9">
                @*@Html.Partial("LoginLayout")*@
                    @RenderBody()
                </div>
        </div>
        </div>
    
            <div class="col-md-12">
                @*底部*@
                @Html.Partial("_FooterLayout")
            </div>
        
    
    @*继承此布局页的页面执行脚本的位置*@
    @RenderSection("scripts",required:false)
</body>
</html>

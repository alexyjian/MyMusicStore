                    <thead>
                        <tr>
                            <th>用户</th>
                            <th>评论内容</th>
                            <th>评论时间</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.Replys)
                        {
                            <tr>
                                <td><img src="@item.Person.Avarda" style="width:35px;height:35px;" />&nbsp;@item.Person.LastName</td>
                                <td>@item.Content</td>
                                <td>@item.CreateDateTime</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>



        </div>
    </div>

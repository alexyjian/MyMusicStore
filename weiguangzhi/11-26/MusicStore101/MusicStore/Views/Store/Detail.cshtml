<h2>@Model.Title</h2>
<div class="container">
    <div class="row clearfix">
        <div class="col-md-12 column">

            <div class="row clearfix">
                <div class="col-md-6 column">

                    <div id="album-details">
                        <p>
                            <img src="@Model.AlbumArtUrl" />
                        </p>
                        <p>
                            <em>发布时间：</em>
                            @Model.PublisherDate.ToString("yyyy年MM月dd日");
                        </p>
                        <p>
                            <em>分类：</em>

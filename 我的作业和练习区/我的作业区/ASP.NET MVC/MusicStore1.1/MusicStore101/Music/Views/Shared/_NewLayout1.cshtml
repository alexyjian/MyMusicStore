@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Tile-音乐商店</title>
    @*绑定样式库*@
    @Styles.Render("~/Content/css")
    @Styles.Render("~/bundles/modernizr")
    @Styles.Render("~/Content/JqueryUI")

    @*绑定脚本库*@
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/JqueryUI")
    @Scripts.Render("~/bundles/jqueryval")
</head>
<body>
    <div>
        <nav class="navbar navbar-default" role="navigation" id="nav-div">
            <div class="container-fluid">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#example-navbar-collapse">
                        <span class="sr-only">切换导航</span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    <h1 class="navbar-brand" id="logo">
                        <a href="#">ASP.NET MVC 音乐商店</a>
                    </h1>
                </div>
                <div class="collapse navbar-collapse" id="example-navbar-collapse">
                    <ul class="nav navbar-nav" id="header_ul">
                        <li><a href="">主页</a></li>
                        <li><a href="">商店</a></li>
                        <li><a href="">登陆</a></li>
                    </ul>
                </div>
            </div>
        </nav>
        <div class="row" id="min">
            <div class="col-md-9">
                <div class="col-xs-12 col-sm-12 col-md-10">                   
                    @RenderBody()
                </div>
            </div>
            <div class="col-md-3">
                @Html.Partial("_GetGenreMenu1", new MusicStoreEntity.EntityDbContext().Genres.ToList())
            </div>
        </div>
      
        <div class="row" id="footer">
            <p class="col-md-12 col-sm-12">
                <img src="img/login_logo.png" alt=""><strong> 2016-2018,</strong><strong>
                    CopyRight
                    By
                </strong><strong>2016软件技术1班</strong>
            </p>
        </div>
    </div>
</body>
</html>
